<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cl_root"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginRight="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivSenderProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:contentDescription="TODO"
            tools:layout_editor_absoluteY="5dp"/>
    </LinearLayout>

<LinearLayout
    android:id="@+id/liContent"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@drawable/chatbot_tv_custom"
    android:layout_marginStart="8dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:text="앗 큰일날 뻔 했다... 혹시 자세한 일정이 있어?"
        />
    <LinearLayout
        android:id="@+id/ll_dynamic_btns"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnTutorial"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="튜토리얼"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/chatbot_tv_slot_custom"/>
        <Button
            android:id="@+id/btnGuide"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="가이드 메세지"
            android:layout_margin="5dp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/chatbot_tv_slot_custom"/>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="62dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="오후 88:444"
            android:textSize="11sp"
            android:paddingBottom="8dp"
            android:layout_gravity="bottom|left"/>
    </LinearLayout>


</LinearLayout>